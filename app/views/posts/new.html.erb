<h1>New Blog Entry</h1>

<%= form_with model: @post, data: { turbo: false }, url: posts_path do |form| %>
    <div>
        <%= form.label :title%>
        <%= form.text_field :title%>
    </div>
    <div>
        <%= form.label :body%>
        <%= form.text_area :body, size: "150x10"%>
    </div>
    <%= form.submit "Enter new post", class: "btn btn-primary" %>
<% end %>
